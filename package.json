{
    "name": "work",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "all": "run-p start:*",
        "css-common": "node-sass --include-path scss html/assets/src/scss/common/common.scss html/assets/css/common/common.css --output-style expanded --source-map html/assets/css/common/",
        "ap-common": "postcss html/assets/css/common/common.css -o html/assets/css/common/common.css -c=postcss.config.js",
        "css-top": "node-sass --include-path scss html/assets/src/scss/top/top.scss html/assets/css/top/top.css --output-style expanded --source-map html/assets/css/top/",
        "ap-top": "postcss html/assets/css/top/top.css -o html/assets/css/top/top.css -c=postcss.config.js",
        "css-comp": "node-sass --include-path scss html/assets/src/scss/component/component.scss html/assets/css/component/component.css --output-style expanded --source-map html/assets/css/component/",
        "ap-comp": "postcss html/assets/css/component/component.css -o html/assets/css/component/component.css -c=postcss.config.js",
        "tiny-img": "node index.js",
        "index-html": "ejs-cli --base-dir html/assets/src/ejs/ \"/**/index.ejs\" --out html/",
        "start:index": "onchange \"html/assets/src/ejs/**/*\" -- npm run index-html",
        "start:common": "onchange \"html/assets/src/scss/common/**/*\" -- run-s run/common*",
        "start:top": "onchange \"html/assets/src/scss/top/top.scss\" -- run-s run/top*",
        "start:comp": "onchange \"html/assets/src/scss/component/*\" -- run-s run/comp*",
        "start:imagemin": "onchange \"html/assets/src/img/**/*\" -- npm run tiny-img",
        "start:bs": "browser-sync start --config bs-config.js",
        "run/common-css": "npm run css-common",
        "run/common-ap": "npm run ap-common",
        "run/top-css": "npm run css-top",
        "run/top-ap": "npm run ap-top",
        "run/comp-css": "npm run css-comp",
        "run/comp-ap": "npm run ap-comp",
        "clean": "rimraf html/assets/{css/*,img/*}"
    },
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "autoprefixer": "^9.6.1",
        "browser-sync": "^2.26.7",
        "ejs-cli": "^2.0.1",
        "imagemin": "^7.0.0",
        "imagemin-gifsicle": "^6.0.1",
        "imagemin-keep-folder": "^5.3.2",
        "imagemin-mozjpeg": "^8.0.0",
        "imagemin-pngquant": "^8.0.0",
        "imagemin-svgo": "^7.0.0",
        "node-sass": "^4.12.0",
        "npm-run-all": "^4.1.5",
        "onchange": "^6.0.0",
        "postcss-cli": "^6.1.3",
        "watch": "^1.0.2"
    },
    "dependencies": {}
}
